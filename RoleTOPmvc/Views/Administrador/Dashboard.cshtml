@model RoleTOPMVC.ViewModels.DashboardViewModel
    <main>
        <section id="status-pedidos">
            <h3>Status dos pedidos</h3>
            <div id="painel">
                <div class="box-status-eventos aprovados">
                    <h4>Aprovados</h4>
                    <p>@Model.EventosAprovados</p>
                </div>
                <div class="box-status-eventos pendentes">
                    <h4>Pendentes</h4>
                    <p>@Model.EventosPendentes</p>
                </div>
                <div class="box-status-eventos reprovados">
                    <h4>Reprovados</h4>
                    <p>@Model.EventosReprovados</p>
                </div>
            </div>
        </section>

        <section id="lista-pedidos">
            <h3>Lista de pedidos</h3>
            <table>
                <thead>
                    <tr>
                        <th rowspan="2">Nome</th>
                        <th rowspan="2">Email</th>
                        <th colspan="2">Evento</th>
                        
                        <th colspan="2" rowspan="2">Aprovar</th>
                    </tr>
                    <tr>
                        <tr>
                        
                        <th colspan="2">Dados dos Cliente</i></th>
                        <th>Tipo de Festa</th>
                        <th>Horario</th>
                    </tr>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="6">
                            <p>Pedidos atualizados em @DateTime.Now</p>
                        </td>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach(var Evento in Model.Eventos)
                    {
                        <tr>
                            <td>@Evento.Nome</td>
                            <td>@Evento.Email</td>
                            <td>@Evento.TipoFesta</td>
                            <td>@Evento.Horario</td>
                            <td><a href='@Url.Action("Aprovar", "Evento", new {Id = @Evento.Id})'><i class="fas fa-check"></i></a></td>
                            <td><a href='@Url.Action("Reprovar", "Evento", new {Id = @Evento.Id})'><i class="fas fa-times"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>

        

    </main>