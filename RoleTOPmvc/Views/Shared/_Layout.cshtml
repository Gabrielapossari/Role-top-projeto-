@model RoleTOPMVC.ViewModels.BaseViewModel
<!DOCTYPE html>
    <html lang="pt-bt">
    <meta charset="utf-8">
    <head>
        <title> Rolê TOP</title>


        @if("Dashboard".Equals(@Model.NomeView))
                        {
                            <link href="~/css/style-dashboard.css" rel="stylesheet" type="text/css">
                            <link href="~/css/style-form-pages.css" rel="stylesheet" type="text/css">
                            <link href="~/css/style-dashboard.css" rel="stylesheet" type="text/css">
                            <link rel="stylesheet" type="text/css" href="~/css/style.css">
                        
                        }else{
                            <link rel="stylesheet" type="text/css" href="~/css/roletop.css">
                            <link rel="stylesheet" type="text/css" href="~/css/style.css">
                        }

        <script src="https://kit.fontawesome.com/349a64cb04.js"></script>
    </head>
    <header>
            <img src="~/img/logo.roletop.png" alt="logo" style="width:300; height:250px;" />
            <br>
            <br>
            <br>
            <br>
            <nav>
                <div class="section-container">
                    <ul>
                        <li id="bt-mobile-menu">
                            <!-- HTML para colocar os ícones do FA -->
                            <a href="javascript:void(0);" class="icon" onclick="toggleMobileMenu()">
                                <i class="fa fa-bars"></i>
                            </a>
                        </li>
                        <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Home" asp-action="Index" class="active">Home</a></li>
                        <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Evento" asp-action="Index" class="active">Evento</a></li>
                        <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Contato" asp-action="Index" class="active">Contato</a></li>
                        @if(@Model.TiposUsuario == 0){
                        <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Historico" asp-action="Historico">Histórico</a></li> 
                        }
                        @if(string.IsNullOrEmpty(@Model.UsuarioEmail))
                    {
                        <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Login" asp-action="Index" class="active">Área do Cliente </a></li> 
                    }
                    else
                    {
                        <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Cliente" asp-action="Logoff">Logoff</a></li>
                    
                    }
                        </li>
                    </ul>
                </div>
            </nav>
        </header>    
@RenderBody();
</html>